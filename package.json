{
  "name": "smart-icons-kit",
  "version": "1.0.0",
  "description": "A smart icon component that works with both React web and React Native",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./react": {
      "types": "./dist/react/index.d.ts",
      "default": "./dist/react/index.js"
    },
    "./react-native": {
      "types": "./dist/react-native/react-native/index.d.ts",
      "default": "./dist/react-native/react-native/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "npm run build:react && npm run build:react-native && npm run build:main",
    "build:react": "tsc -p tsconfig.react.json",
    "build:react-native": "tsc -p tsconfig.react-native.json",
    "build:main": "tsc -p tsconfig.main.json",
    "test": "jest",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "react": ">=18.0.0",
    "react-dom": ">=18.0.0",
    "lucide-react": "^0.473.0",
    "lucide-react-native": "^0.542.0"
  },
  "peerDependenciesMeta": {
    "react-native": {
      "optional": true
    },
    "react-native-svg": {
      "optional": true
    }
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.0.0",
    "@testing-library/react": "^16.0.0",
    "@types/jest": "^29.0.0",
    "@types/react": "^19.0.0",
    "jest": "^29.0.0",
    "jest-environment-jsdom": "^29.0.0",
    "lucide-react": "^0.473.0",
    "lucide-react-native": "^0.542.0",
    "react-icons": "^5.0.0",
    "ts-jest": "^29.0.0",
    "typescript": "^5.0.0"
  },
  "keywords": [
    "react",
    "react-native",
    "icons",
    "lucide",
    "smart-icons-kit"
  ],
  "author": "",
  "license": "MIT"
}
